<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,2"
    android:shrinkColumns="*"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/fingetfood"
        android:gravity="center"
        android:text="TasteRoad"
        android:textColor="#000000"
        android:textSize="50sp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/KoreaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:onClick="onClickKorenFood"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_home_korean" />

        <ImageButton
            android:id="@+id/FlourBotton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:onClick="onClickSnackFood"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_home_bunsik" />

        <ImageButton
            android:id="@+id/ChinaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:onClick="onClickChineseFood"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_home_chinese" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_gravity="center"
            android:fontFamily="@font/bmyeonsung"
            android:textColor="#000000"
            android:textSize="22dp"
            android:text="한식" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_gravity="center"
            android:fontFamily="@font/bmyeonsung"
            android:textColor="#000000"
            android:textSize="22dp"
            android:text="분식" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_gravity="center"
            android:fontFamily="@font/bmyeonsung"
            android:textColor="#000000"
            android:textSize="22dp"
            android:text="중식" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ChickenButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="onClickChickenFood"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_home_chichen" />

        <ImageButton
            android:id="@+id/WesternButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="onClickWesternFood"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_home_pizza" />

        <ImageButton
            android:id="@+id/JapanButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="onClickJapaneseFood"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_home_japanese" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_gravity="center"
            android:fontFamily="@font/bmyeonsung"
            android:textColor="#000000"
            android:textSize="22dp"
            android:text="치킨" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_gravity="center"
            android:fontFamily="@font/bmyeonsung"
            android:textColor="#000000"
            android:textSize="22dp"
            android:text="양식" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_gravity="center"
            android:fontFamily="@font/bmyeonsung"
            android:textColor="#000000"
            android:textSize="22dp"
            android:text="일식" />
    </TableRow>

</TableLayout>